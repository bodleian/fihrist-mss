               <msContents>
                  <summary change="#add-summary2">
                     5 works by 5 authors on the subjects of Islamic law, Natural religion, Islam, Sufism, and Arabic poetry
                  </summary>
                  <msItem xml:id="RAS_Arabic_75-item1" n="a">
                     <author key="person_90043858" ref="http://viaf.org/viaf/90043858/">
                        <persName xml:lang="ar-Latn-x-lc" type="standard">Ibn al-ʻImād al-Aqfahsī, Aḥmad, ca. 1349-1405</persName>
                        <persName xml:lang="ar">احمد بن العماد ااقفهسي</persName>
                     </author>
                     <title xml:lang="fa-Latn-x-lc" key="work_9447">Kashf al-asrār ‘ammā khafiya ‘an al-afkār</title>
                     <title xml:lang="ar" key="work_9447">كـشـف الأسـرار عـمـا خـفـي عن الأفـكـار</title>
                     <incipit xml:lang="ar">وبعد فهذا الكتاب أذكر فيه أجوبة عن مسائل مشكلة وخفيات عن إدراك خواص القلوب</incipit>
                     <explicit xml:lang="ar" defective="true"/>
                     <textLang mainLang="ar">Arabic</textLang>
                  </msItem>
                  <msItem xml:id="RAS_Arabic_75-item2" n="b">
                     <author key="person_81960987" ref="http://viaf.org/viaf/81960987/">
                        <persName xml:lang="ar-Latn-x-lc" type="standard">Ibn Ghānim, ʻIzz al-Dīn ʻAbd al-Salām ibn Aḥmad, d. 1279?</persName>
                        <persName xml:lang="ar">المقدسي، عبد السلام بن أحمد</persName>
                     </author>
                     <title xml:lang="ar-Latn-x-lc" key="work_2168">Kashf al-asrār ʻan ḥikam al-ṭuyūr wa-al-azhār</title>
                     <title xml:lang="ar" key="work_2168">كـشـف الأسـرار عن حـكـم الـطـيـور و الأزهـار</title>
                     <incipit xml:lang="ar">وبعد فاني نظرت بعين التحقيق فرايت بنور التصديق والتوفيق ان كل مخلوق مقر بوجود الخالق</incipit>
                     <explicit xml:lang="ar" defective="true"/>
                     <textLang mainLang="ar">Arabic</textLang>
                  </msItem>
                  <msItem xml:id="RAS_Arabic_75-item3" n="c">
                     <author key="person_f1393">
                        <persName xml:lang="ar-Latn-x-lc" type="standard">Ibn Ḥajar al-ʻAsqalānī, Aḥmad ibn ʻAlī, 1372-1449</persName>
                        <persName xml:lang="ar">ابن حجر العسقلاني</persName>
                     </author>
                     <note>Also attributed to <persName xml:lang="ar-Latn-x-lc" type="standard" key="person_f4460">Zayn al-Quḍāt Aḥmad ibn Muḥammad al-Ḥijjī</persName>
                     </note>
                     <title xml:lang="ar-Latn-x-lc" key="work_9448">Munabbihāt ʻalá al-istiʻdād li-yawm al-maʻād</title>
                     <title xml:lang="ar" key="work_9448">منبهات على الاستعاد ليوم المعاد</title>
                     <incipit xml:lang="ar"/>
                     <explicit xml:lang="ar" defective="true"/>
                     <textLang mainLang="ar">Arabic</textLang>
                  </msItem>
                  <msItem xml:id="RAS_Arabic_75-item4" n="d">
                     <author key="person_f407">
                        <persName xml:lang="fa-Latn-x-lc" type="standard">Anonymous</persName>
                     </author>
                     <title xml:lang="ar-Latn-x-lc" key="work_9449">Kitāb fī al-taṣawwuf nāfiʻ in shāʼa Allāh lil-ʻāmil bi-mā fīhā</title>
                     <title xml:lang="ar" key="work_9449">كتاب في تصوف نافع إن شاء الله تعالى للعامل بما فيها</title>
                     <incipit xml:lang="ar">وبعد فخير ما سلكه الانسان في وصوله الى مقام الاحسان حسن الخلق تقوله عليه الصلاة والسلام</incipit>
                     <explicit xml:lang="ar" defective="true"/>
                     <textLang mainLang="fa">Arabic</textLang>
                  </msItem>
                  <msItem xml:id="RAS_Arabic_75-item5" n="e">
                     <author key="person_45402377" ref="http://viaf.org/viaf/45402377/">
                        <persName xml:lang="ar-Latn-x-lc" type="standard">Mallāḥ, ʻAbd al-Raḥmān ibn Yaḥyá, d. 1634 or 5</persName>
                        <persName xml:lang="ar">المقدسي، عبد السلام بن أحمد</persName>
                     </author>
                     <title xml:lang="ar-Latn-x-lc" key="work_9450">Takhmīs lāmīyat Ibn al-Wardī</title>
                     <title xml:lang="ar" key="work_9450">تخميس لامية الشيخ ابن الوردي</title>
                     <note>Takhmīs ("quintet" or "fivesome") based on the <title xml:lang="ar-Latn-x-lc">Lāmīyah <foreign xml:lang="ar">لامية</foreign>
                        </title> of <persName key="person_81959174" ref="http://viaf.org/viaf/81959174/">
                           <persName xml:lang="ar-Latn-x-lc">Ibn al-Wardī, Zayn al-Dīn ʻUmar ibn al-Muẓaffar, d. 1349</persName>
                           <persName xml:lang="ar">ابن الوردى، زين الدين عمر ابن مطفر</persName>
                        </persName>
                     </note>
                     <incipit xml:lang="ar">هذا تخميس لامية الشيخ ابن الوردي للشيخ عبد الرحمن الملاح</incipit>
                     <explicit xml:lang="ar" defective="true">وهذه الزيادات التي زادها ناظمها اي ناظم التخميس الشيخ عبد الرحمنالملاح وهذه صورة ما كتبه سيدنا ومولانا شيخ زين العابدين البكري الصديقي</explicit>
                     <textLang mainLang="ar">Arabic</textLang>
                  </msItem>
