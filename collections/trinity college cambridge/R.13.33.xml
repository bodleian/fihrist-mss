                            <title xml:lang="ar-Latn-x-lc" key="">Khuṭbah</title>
                            
                            <title xml:lang="ar">خطبة</title>
                            
                            
                            <note>Homilies for the two Great Feasts</note>
                            
                            <textLang mainLang="ar">Arabic</textLang>
                        </msItem>
                        <msItem n="15" xml:id="R_13_33-item15">
                            <locus from="158v" to="165r">ff. 158v.-165r.</locus>
