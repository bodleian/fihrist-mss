                                <persName xml:lang="fa">امير شاهى سبزوارى</persName>
                            </author>
                            <title xml:lang="fa-Latn-x-lc" key="work_100">Dīvān-i Shāhī</title>
                            <title xml:lang="fa" key="work_100">ديوان شاهی</title>
